{
  "extends": "@repo/typescript-config/react-native-library",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true
  }
}
